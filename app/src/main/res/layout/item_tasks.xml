<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="5dp">

    <LinearLayout
        android:id="@+id/layout_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxHeight="150dp"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="11">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow_foreground" />

        <LinearLayout
            android:layout_width=".5dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/layout_name_project_and_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/main"
                    android:backgroundTint="#F5EEFC"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/text_name_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:padding="5dp"
                        android:text="name"
                        android:textColor="@color/main" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_current_state"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/main"
                    android:backgroundTint="@color/light_pink"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/text_current_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:padding="5dp"
                        android:text="name"
                        android:textColor="@color/pink" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_time_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15ч 21м" />

            <ImageButton
                android:id="@+id/button_icon_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_play_foreground" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>